{
  "expo": {
    "name": "pic-to-playlist",
    "slug": "pic-to-playlist",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#212121"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kevintruong.pictoplaylist",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsArbitraryLoadsInWebContent": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "android.kevintruong.pictoplaylist"
    },
    "web": {
      "output": {
        "publicPath": "/pic-to-playlist/"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Pic-To-Playlist to access your camera",
          "microphonePermission": "Allow Pic-To-Playlist to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ]
  }
}
